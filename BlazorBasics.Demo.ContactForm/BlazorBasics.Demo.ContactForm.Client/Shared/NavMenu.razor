<nav class="navbar is-light" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <a class="navbar-item" href="">
            <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
        </a>

        <button type="button" @onclick="() => IsActive = !IsActive" role="button" class="navbar-burger @BurgerActive" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </button>
    </div>

    <div class="navbar-menu @BurgerActive">
        <div class="navbar-start">
            <NavLink class="navbar-item" href="" ActiveClass="@Active">
                Home
            </NavLink>

            <NavLink class="navbar-item" ActiveClass="@Active">
                Link 1
            </NavLink>

            <div class="navbar-item has-dropdown is-hoverable">
                <NavLink class="navbar-link" ActiveClass="@Active">
                    Dropdown Menu
                </NavLink>

                <div class="navbar-dropdown">
                    <NavLink class="navbar-item" ActiveClass="@Active">
                        Link 1
                    </NavLink>
                    <NavLink class="navbar-item" ActiveClass="@Active">
                        Link 2
                    </NavLink>
                    <hr class="navbar-divider">
                    <NavLink class="navbar-item" ActiveClass="@Active">
                        Link 3
                    </NavLink>
                </div>
            </div>
        </div>

        <div class="navbar-end">
            <div class="navbar-item">
                <div class="buttons">
                    <NavLink class="button is-primary" ActiveClass="@Active">
                        <strong>Sign up</strong>
                    </NavLink>
                    <NavLink class="button is-light" ActiveClass="@Active">
                        Log in
                    </NavLink>
                </div>
            </div>
        </div>
    </div>
</nav>

@code{
    const string Active = "is-active";
    bool IsActive;
    string BurgerActive => IsActive ? Active : "";
}
